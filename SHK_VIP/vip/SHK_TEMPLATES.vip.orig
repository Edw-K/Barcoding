                SHKObjSP_SP.Name := tFields.title;
               }
             update current SHKObjSP_SP
         }
        }
        else
         {
           message(' К данному типу доркумента не предусмотренн выбор полей. ''#13'' обратитесь к разработчику',error)
         }
     }

