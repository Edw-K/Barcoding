#include CFG_ALL.INC

end;
bmpDigit1 bitmap "1.bmp" // Пиктограмма размера 15x15 цифры 1
bmpDigit2 bitmap "2.bmp" // Пиктограмма размера 15x15 цифры 2
bmpDigit3 bitmap "3.bmp" // Пиктограмма размера 15x15 цифры 3
bmpDigit4 bitmap "4.bmp" // Пиктограмма размера 15x15 цифры 4
bmpDigit5 bitmap "5.bmp" // Пиктограмма размера 15x15 цифры 5
interface AA
  screen S
    <<

 Embedded interface
    >>
  end
end.
interface A1 'Tabs with tabBitmap. 1. Top'
  show (,, 48, 25);
  create view as select * from ALLMEMO;
  tabbedSheet TS
    show (,,, 20);
    browse B 'browse'
      fields
        NREC 'NREC';
    end
    embedded E 'embedded' interface AA
    end
    formatsGroup FG 'formatsGroup'
      browse Br
        show (,,, 10)
        fields
          NREC 'NREC';
      end
      text MEM 'MEM';
        show (, 11)
    end
    screen S 'screen'
      fields
        NREC;
      <<

 NREC:.@@@@@@@@@@@@@@@@
      >>
    end
    text memoID = M MEM 'text';
  end
  screen Sc
    show (, 21);
    buttons
      cmB1;
    <<

 <.Show images on tabs.>
    >>
  end
  handleEvent
    cmB1:
    {
      cfsSetProp('B', cfpTabImageName, 'bmpDigit1')
      cfsSetProp('E', cfpTabImageName, 'bmpDigit2')
      cfsSetProp('FG', cfpTabImageName, 'bmpDigit3')
      cfsSetProp('S', cfpTabImageName, 'bmpDigit4')
      cfsSetProp('M', cfpTabImageName, 'bmpDigit5')
    }
  end
end.
