<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TSD.Views.FlyoutPages.ContentViews.LoadingView">
  <ContentView.Content>
        <Frame Opacity="1" BackgroundColor="White"
                       CornerRadius="20"
                       HasShadow="True">
            <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                <Image Source="loading.gif" IsAnimationPlaying="True" WidthRequest="75" HeightRequest="75"/>
                <Label Text="{Binding StateText, Mode=OneWay}"
                               FontSize="12"
                               TextColor="Gray" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>