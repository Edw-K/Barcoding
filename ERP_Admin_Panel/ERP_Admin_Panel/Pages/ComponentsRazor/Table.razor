@typeparam TItem
@inherits TableModel<TItem>

<div class="card o-hidden border-1 mb-2 shadow-sm h-100 overflow-hidden">
    <div class="card-body p-0 h-100">
        <div class="table-responsive">
                <div class="col-lg-12 h-100 ">
                <div class="tableFixHead border-1">
            <table class="table table-borderless mb-0">
                <thead>
                    <tr>
                        @TableHeader
                    </tr>
                </thead>
                <tbody>
                    @if (Items == null)
                    {
                        <p>Loading...</p>
                    }
                    else
                    {
                        @foreach (var item in Items)
                        {
                            if (RowTemplate is not null)
                            {
                                    <tr>@RowTemplate(item)</tr>
                            }
                        }
                    }
                </tbody>
            </table>
            </div>
            </div>
        </div>
    </div>
</div>