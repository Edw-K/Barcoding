@inherits RemoveUserModel

<div class="modal-body">
    <p>Вы действительно хотите удалить пользователя @(User == null ? string.Empty : $"\"{User.Login}\"")?</p>
</div>
<div class="modal-footer justify-content-center">
    <button class="btn btn-danger" @onclick="@Cancel">Нет</button>
    <button class="btn btn-primary" @onclick="@Accept">Да</button>
</div>