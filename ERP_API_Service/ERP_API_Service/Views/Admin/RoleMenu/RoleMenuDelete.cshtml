@model ERP_API_Service.Objects.RoleMenu

@{
    ViewData["Title"] = "RoleMenuDelete";
    ViewBag.Title = "RoleMenuDelete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Удаление</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Удалить Меню @Html.DisplayFor(model => model.Menu.Name) из Роли @Html.DisplayFor(model => model.Role.Name)?</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Role.Id)

        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Удалить" class="btn btn-danger" style="font-size:20px" />
                <a type="button" class="btn btn-light" style="font-size:20px" href="@Url.Action("RoleEdit", new { id = Model.Role.Id })">Отмена</a>
            </div>
        </div>
        <br />
    </div>
}
