@model IEnumerable<ERP_API_Service.Objects.RoleMenu>

@{
    ViewData["Title"] = "RoleMenuList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Меню ролей</h2>
<p>
    <button type="button" class="btn btn-light" onclick="location.href='@Url.Action("RoleMenuCreate")'">Добавить</button>
</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Название роли</th>
            <th scope="col">Название меню</th>
            <th scope="col">Действие</th>
            <th scope="col">Описание</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Role.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Menu.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Menu.Action)</td>
            <td>@Html.DisplayFor(modelItem => item.Descr)</td>
            <td><button type="button" class="btn btn-light" style="font-size:15px" onclick="location.href='@Url.Action("RoleMenuEdit", new { id = item.Id })'">Изменить</button></td>
            <td><button type="button" class="btn btn-light" style="font-size:15px" onclick="location.href='@Url.Action("RoleMenuDelete", new { id = item.Id })'">Удалить</button></td>
        </tr>
        }
    </tbody>
</table>

