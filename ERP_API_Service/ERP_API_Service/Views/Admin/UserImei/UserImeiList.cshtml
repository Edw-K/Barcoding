@model IEnumerable<ERP_API_Service.Objects.UserImei>

@{
    ViewData["Title"] = "UserImeiList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>IMEI пользователей</h2>
<p>
    <button type="button" class="btn btn-light" onclick="location.href='@Url.Action("UserImeiCreate")'">Добавить</button>
</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Логин</th>
            <th scope="col">Код IMEI</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.User.Login)</td>
                <td>@Html.DisplayFor(modelItem => item.Imei.ImeiCode)</td>
                <td><a type="button" class="btn btn-light" style="font-size:15px" href="@Url.Action("UserImeiEdit", new { id = item.Id })">Изменить</a></td>
                <td><a type="button" class="btn btn-light" style="font-size:15px" href="@Url.Action("UserImeiDelete", new { id = item.Id })">Удалить</a></td>
            </tr>
        }
    </tbody>
</table>

