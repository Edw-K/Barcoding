@model ERP_API_Service.Objects.Menu

@{
    ViewData["Title"] = "MenuCreate";
    ViewBag.Title = "MenuCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Добавление новой записи</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Новое меню @Html.DisplayFor(model => model.Name)</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group" style="font-size:20px">
        @Html.Label("№ п/п", "№ п/п", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Npp, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Npp, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="font-size:20px">
        @Html.Label("Наименование", "Наименование", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group" style="font-size:20px">
        @Html.Label("Действие", "Действие", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Action, new SelectList(ViewBag.actions, "Value", "Text"), "- Действие -", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Action, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group" style="font-size:20px">
        @Html.Label("Описание", "Описание", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Descr, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Descr, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Сохранить" class="btn btn-light" style="font-size:20px" />
            <button type="button" class="btn btn-light" style="font-size:20px" onclick="location.href='@Url.Action("MenuList")'">Отмена</button>
        </div>
    </div>
    <br />
</div>
}
